        Title="Registation_Window" Height="170.4" Width="227.2">
    <Grid>
        <TextBox Name="Login" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="Login" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="Password" HorizontalAlignment="Left" Height="23" Margin="10,41,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="Repeat" HorizontalAlignment="Left" Height="23" Margin="10,72,0,0" TextWrapping="Wrap" Text="Repeat password" VerticalAlignment="Top" Width="120"/>
        <CheckBox Name="IsAdmin" Content="Is an Admin" HorizontalAlignment="Left" Margin="10,103,0,0" VerticalAlignment="Top" IsEnabled="False"/>
        <Button Name="OKB" Content="Create" HorizontalAlignment="Left" Margin="146,32,0,0" VerticalAlignment="Top" Width="66" Height="43" Click="OKB_Click"/>
    </Grid>
</Controls:MetroWindow>
